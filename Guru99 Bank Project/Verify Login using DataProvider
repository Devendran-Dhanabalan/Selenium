package Expensing;

import org.testng.annotations.Test;

　
import org.testng.annotations.BeforeTest;
import org.openqa.selenium.Alert;
import org.openqa.selenium.By;
import org.openqa.selenium.NoAlertPresentException;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.ie.InternetExplorerDriver;
import org.testng.Assert;
import org.testng.annotations.AfterTest;
import org.testng.annotations.DataProvider;

public class TestCase1 {
	public static WebDriver driver = null;
  @Test(dataProvider = "getInputData")
  public void Test(String username, String password) {
	  driver.findElement(By.xpath("//input[@name='uid']")).clear();
	  driver.findElement(By.xpath("//input[@name='uid']")).sendKeys(username);
	  
	   		  //Inputting password 
	   		  driver.findElement(By.xpath("//input[@name='password']")).clear(); 
	 		  driver.findElement(By.xpath("//input[@name='password']")).sendKeys(password); 
	   		   
	   		  //Clicking on login button 
	   		  driver.findElement(By.xpath("//input[@name='btnLogin']")).click(); 
	   		   
	   		  try { 
	   			  Alert alert = driver.switchTo().alert(); 
	   			  String actualBoxTitle = alert.getText(); 
	   			  alert.accept(); 
	   			  Assert.assertEquals(actualBoxTitle, Util.EXPECT_ERROR);
	   			  
	   		  } 
	   		   
	  		  catch(NoAlertPresentException ex) { 
	  			  String actualTitle = driver.getTitle(); 
	  			  Assert.assertEquals(actualTitle, Util.EXPECTED_TITLE);
	  			   
	  		  } 

  }
  
  @BeforeTest
  public void beforeTest() {
	  	System.setProperty(Util.DRIVER_TYPE,Util.DRIVER_PATH);
		driver = new InternetExplorerDriver();
		driver.manage().window().maximize();
		driver.navigate().to(Util.URL);
  }

  @AfterTest
  public void afterTest() {
	  driver.close();
  }
  
  @DataProvider(name = "getInputData") 
  public Object[][] inputData() {
	  return new Object[][] {
		  {Util.USERNAME,Util.PASSWORD},
		  {Util.INVALID_USERNAME,Util.PASSWORD},
		  {Util.USERNAME,Util.INVLAID_PASSWORD},
		  {Util.INVALID_USERNAME,Util.INVLAID_PASSWORD}
	  };
  }
	  
  }

　
